---
name: zk-backyp
templates:
  ctl.erb: bin/ctl

packages:
- zk-backyp

properties:
  zk_backyp.do_cleanup:
    description: "Remove old Snapshots and Transaction Logs before Backup"
    default: "TRUE"
  zk_backyp.keep_n_snapshots:
    description: "How many snapshots should be kept"
    default: "3"
  zk_backyp.prefix:
    description: "Backup Archive Prefix"
    default: "zookeeper-backup"
  zk_backyp.interval:
    description: "Backup interval in seconds"
    default: 86400
  zk_backyp.s3_bucket:
    description: "S3 Bucket"
  zk_backyp.s3_endpoint:
    description: "S3 Endpoint"
    default: "https://s3.amazonaws.com"
  zk_backyp.aws_access_key:
    description: "AWS Access Key for S3"
  zk_backyp.aws_secret_key:
    description: "AWS Secret Key for S3"